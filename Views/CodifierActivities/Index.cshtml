@model IEnumerable<PracticeActivityTraking.CodifierActivity>

@{
    ViewBag.Title = "Кодификатор активностей";
}

<h2>Кодификатор активностей</h2>

<p>
    @Html.ActionLink("Добавить новый тип активности", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ActivityName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Score)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActivityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Score)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.ActivityTypeID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.ActivityTypeID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.ActivityTypeID })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Вернуться в панель HR-сотрудника", "Index", "HR")
</p>
