@model PracticeActivityTraking.Models.ClassifiedEvent

@{
    ViewBag.Title = "Мероприятия предприятия";
}
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Мероприятия предприятия</h2>

<form method="get">
    <div class="form-inline">
        <label class="control-label">Формат: </label>
        @Html.DropDownList("format", Model.Formats as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Статус: </label>
        @Html.DropDownList("status", Model.Status as SelectList,
                htmlAttributes: new { @class = "form-control" })

        <label class="control-label">Тип: </label>
        @Html.DropDownList("type", Model.Types as SelectList,
                    htmlAttributes: new { @class = "form-control" })

        <input type="submit" value="Фильтр" class="btn btn-default" />
    </div>
</form>

<table class="table">
    <tr>
        <th>Название мероприятия</th>
        <th>Дата проведения</th>
        <th>Формат</th>
        <th>Подтип</th>
        <th>Статус</th>
        <th></th>
    </tr>

    @foreach (var item in Model.Events)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EventName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodifierFormatEvent.FormatName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodifierSubtypeEvent.SubtypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CodifierStatusEvent.EventStatusName)
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Вернуться в главное меню", "Index", "Home")
</p>
