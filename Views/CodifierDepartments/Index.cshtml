@model IEnumerable<PracticeActivityTraking.CodifierDepartment>

@{
    ViewBag.Title = "Подразделения предприятия";
}

<h2>Подразделения предприятия</h2>

<p>
    @Html.ActionLink("Добавить новое подразделение", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmentName)
            </td>
            <td>
                @Html.ActionLink("Изменить", "Edit", new { id = item.DepartmentID }) |
                @Html.ActionLink("Подробнее", "Details", new { id = item.DepartmentID }) |
                @Html.ActionLink("Удалить", "Delete", new { id = item.DepartmentID })
            </td>
        </tr>
    }

</table>
<p>
    @Html.ActionLink("Вернуться в панель HR-сотрудника", "Index", "HR")
</p>
